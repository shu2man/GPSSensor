<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.yellow.gpssensor.MainActivity">

    <com.baidu.mapapi.map.TextureMapView
        android:id="@+id/bmapView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clickable="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
    </com.baidu.mapapi.map.TextureMapView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:orientation="vertical"
        android:textSize="6sp"
        android:background="@color/listbgc"
        android:gravity="center_horizontal"
        android:padding="3dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >
        <ImageButton
            android:id="@+id/satellite_mode_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:onClick="satelliteModeMap"
            android:background="@drawable/satellite_off"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="卫星图"
            />

        <ImageButton
        android:id="@+id/traffic_mode_btn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:onClick="trafficModeMap"
        android:background="@drawable/traffic_off"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="交通网"
            />

        <ImageButton
            android:id="@+id/heat_mode_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:onClick="heatModeMap"
            android:background="@drawable/heat_off"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="热力图"
            />
        <ImageButton
            android:id="@+id/locating_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/loc_btn"
            android:onClick="locateToCurrent"
            />
        <TextView
            android:id="@+id/loc_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="定位"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/trace_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:textSize="6sp"
        android:gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:background="@color/listbgc"
        android:padding="3dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <ImageButton
            android:id="@+id/trace_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/trace_start"
            android:onClick="traceSwitch"
            />
        <TextView
            android:id="@+id/trace_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="录制轨迹"
            android:layout_marginTop="5dp"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
